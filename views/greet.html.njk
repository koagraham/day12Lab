{% extends 'base.html.njk' %}
{% block title %}Greetings{% endblock title %}
{% block body %}
  <h1>Nice to meet you, {{ name }}.</h1>
  <p>You're very {{ compliment }}.</p>
  <form action="/game">
    <p>Would you like to play a game?</p>
    <input type="radio" name="play" value="yes">
    <label>Yes</label>
    <input type="radio" name="play" value="no">
    <label>No</label>
    <button type="submit">Let's Go!</submit>
  </form>
{% endblock %}